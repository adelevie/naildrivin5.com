role :webadmin, "www.naildrivin5.com"
task :update do
  run "mkdir -p /home/davec/site_stage"
  run "rm -rf /home/davec/site_stage/*"
  run "cd /home/davec/site_stage && git clone file:///home/davec/Archive/naildrivin5.com"
  run "cd /home/davec/site_stage/naildrivin5.com && jekyll"
  run "cd /home/davec/site_stage/naildrivin5.com/_site && cp * -R /home/webadmin/naildrivin5.com/html"
end
